<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00C2AFAF"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvStatusBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivImageBarang"
                android:layout_width="450dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNamaBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorLink="#00000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPenjual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorLink="#00000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTglBeli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorLink="#00000000"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvjumlahbarang_pembeli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvvarian_pembeli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvharga_pembeli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvLokasi"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:layout_marginBottom="10dp"
                    android:textColorLink="#00000000"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_terima_perubahan_history_pembeli"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="#43A047"
                android:text="Terima Perubahan"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonsudahsampai_pembeli"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="#43A047"
                android:text="Sudah Sampai"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_batalkan_pesanan_history_pembeli"
                style="@style/whiteOnRed"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Batalkan Pesanan" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>