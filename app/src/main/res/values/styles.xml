<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/biru_terang</item>
        <item name="colorPrimaryDark">@color/biru_gelap</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="whiteOnBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/biru_terang</item>
    </style>
    <style name="whiteOnRed">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/merah_tua</item>
    </style>
    <style name="whiteOnGreen">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/hijau</item>
    </style>
</resources>
